generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  RECRUITER
  ADMIN
}

enum ReportStatus {
  PENDING
  PROCESSING
  COMPLETED
  FAILED
}

enum RedFlagSeverity {
  LOW
  MEDIUM
  HIGH
}

enum SkillVerdict {
  VERIFIED
  PARTIAL
  UNVERIFIED
}

model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  role      Role

  googleId  String  @unique
  reports   Report[]

  resume    Resume[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Resume {
  id          String   @id @default(uuid())
  rawText     String?
  parsedJson  Json
  fileUrl     String?
  
  reports     Report[]
  userId String
  user   User @relation(fields: [userId], references: [id])


  createdAt   DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Report {
  id             String   @id @default(uuid())
  githubUsername String?
  status         ReportStatus
  riskScore      Int?
  credibility    Int?
  analysisMeta   Json?
  
  userId         String
  user           User     @relation(fields: [userId], references: [id])

  resumeId       String
  resume         Resume   @relation(fields: [resumeId], references: [id])

  skills         SkillScore[]
  redFlags       RedFlag[]

  createdAt      DateTime @default(now())
  updatedAt DateTime @updatedAt
}


model SkillScore {
  id       String @id @default(uuid())
  skill    String
  score    Float
  verdict   SkillVerdict
  evidence  Json? 

  reportId String
  report  Report  @relation(fields: [reportId], references: [id])

  createdAt   DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model RedFlag {
  id       String @id @default(uuid())
  message  String
  severity RedFlagSeverity

  reportId String
  report  Report  @relation(fields: [reportId], references: [id])

  createdAt   DateTime @default(now())
  updatedAt DateTime @updatedAt
}

